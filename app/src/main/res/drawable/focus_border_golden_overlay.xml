<?xml version="1.0" encoding="utf-8"?>
<!-- Golden Ratio Overlay Focus Border (Fibonacci proportions) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow - 3dp (Fibonacci) -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color="#952E5BFF" />
            <corners android:radius="11dp" />
        </shape>
    </item>
    <!-- Middle bright - 2dp (Fibonacci) -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#FF5B8DEE" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- Inner sharp - 1dp (Fibonacci) -->
    <item android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#FFFFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
