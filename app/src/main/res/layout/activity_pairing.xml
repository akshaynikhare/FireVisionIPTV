<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:padding="@dimen/spacing_large">

    <!-- Header -->

    <!-- PIN Display and QR Code - Centered -->

    <!-- Instructions at bottom -->

    <!-- Loading Spinner (initially visible) -->

        <ProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/accent_primary"
        android:visibility="visible" />    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="vertical"
            android:rotationX="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pair Your TV"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pin_container"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Left side: PIN Display -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xs"
                    android:text="Enter PIN"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_subheading" />

                <TextView
                    android:id="@+id/pin_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pin_background"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.1"
                    android:padding="@dimen/padding_large"
                    android:text="------"
                    android:textColor="@color/accent_primary"
                    android:textSize="@dimen/text_size_pin"
                    android:textStyle="bold" />

                <!-- Status Message -->

                <!-- Countdown Timer -->
                <TextView
                    android:id="@+id/status_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:gravity="center"
                    android:text="Generating PIN..."
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_subheading" />

                <TextView
                    android:id="@+id/countdown_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xxs"
                    android:gravity="center"
                    android:text="Expires in: 10:00"
                    android:textColor="@color/accent_tertiary"
                    android:textSize="@dimen/text_size_body" />

                <Button
                    android:id="@+id/skip_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:paddingStart="@dimen/padding_xl"
                    android:paddingEnd="@dimen/padding_xl"
                    android:paddingTop="@dimen/padding_small"
                    android:paddingBottom="@dimen/padding_small"
                    android:text="Enter Code Manually"
                    android:textSize="@dimen/text_size_body" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="@dimen/stroke_width_medium"
                android:layout_height="300dp"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:background="@color/divider" />

            <!-- Right side: QR Code for Signup -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account?"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_subheading" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan to Create Account"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_heading"
                    android:textStyle="bold" />

                <!-- QR Code for Registration -->

                <ImageView
                    android:id="@+id/signup_qr_code"
                    android:layout_width="@dimen/qr_code_size"
                    android:layout_height="@dimen/qr_code_size"
                    android:contentDescription="QR Code for Signup"
                    android:padding="@dimen/qr_code_padding"
                    android:background="@android:color/white"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:text="tv.cadnative.com/user/register.html"
                    android:textColor="@color/accent_primary"
                    android:textSize="@dimen/text_size_body" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/instructions_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <!-- Buttons -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/retry_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/padding_xl"
                    android:paddingEnd="@dimen/padding_xl"
                    android:paddingTop="@dimen/padding_small"
                    android:paddingBottom="@dimen/padding_small"
                    android:text="Generate New PIN"
                    android:textSize="@dimen/text_size_body"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingEnd="@dimen/padding_small"
                    android:text="Visit your dashboard to enter this PIN"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_body" />

                <TextView
                    android:id="@+id/server_url_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="https://tv.cadnative.com"
                    android:textColor="@color/accent_primary"
                    android:textSize="@dimen/text_size_subheading"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
