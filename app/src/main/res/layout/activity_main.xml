<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/default_background"
    tools:context=".MainActivity"
    tools:deviceIds="tv">

    <!-- Netflix-style Sidebar - Reusable Component -->
    <include layout="@layout/include_sidebar"/>

    <!-- Main Content Area -->
    <FrameLayout
        android:id="@+id/main_browse_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            android:indeterminate="true"
            android:elevation="8dp" />

        <!-- Error Message Container -->
        <LinearLayout
            android:id="@+id/error_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="48dp"
            android:background="@color/default_background">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_settings"
                android:tint="#E74C3C"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/error_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server Connection Failed"
                android:textSize="32sp"
                android:textColor="#E74C3C"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Failed to load channels from server.\nPlease check your connection and TV code."
                android:textSize="18sp"
                android:textColor="#ECF0F1"
                android:gravity="center"
                android:layout_marginBottom="32dp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Check your internet connection\n• Verify your TV code in Settings\n• Ensure the server is running"
                android:textSize="16sp"
                android:textColor="#BDC3C7"
                android:gravity="start"
                android:lineSpacingExtra="8dp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>