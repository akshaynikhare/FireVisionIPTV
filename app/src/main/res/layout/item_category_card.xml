<?xml version="1.0" encoding="utf-8"?>
<!-- Category/Language Card Item Layout -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_card"
    android:layout_width="@dimen/card_width"
    android:layout_height="@dimen/card_height"
    android:layout_margin="@dimen/spacing_xs"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/spacing_medium">

        <!-- Icon for Category (hidden for language) -->
        <ImageView
            android:id="@+id/category_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="@dimen/spacing_small"
            android:tint="@color/text_primary"
            android:contentDescription="@string/category_icon"/>

        <!-- Text for Language (2 letter code) -->
        <TextView
            android:id="@+id/language_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_small"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:visibility="gone"/>

        <!-- Category/Language Name -->
        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- Channel Count -->
        <TextView
            android:id="@+id/channel_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_secondary"/>

    </LinearLayout>

    <!-- Focus Border Overlay -->
    <View
        android:id="@+id/focus_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/focus_border"
        android:visibility="invisible"/>

</androidx.cardview.widget.CardView>
