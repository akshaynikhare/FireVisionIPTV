<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_background"
    android:padding="55dp">

    <!-- Title -->

    <!-- Settings Card with Golden Ratio proportions -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:orientation="vertical">

        <!-- Server URL Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:text="Server Configuration"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Server URL"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/server_url_input"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="21dp"
            android:background="@drawable/edit_text_background"
            android:hint="Enter server URL"
            android:inputType="textUri"
            android:padding="13dp"
            android:singleLine="true"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="TV Pairing Code"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tv_code_input"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="21dp"
            android:background="@drawable/edit_text_background"
            android:hint="Enter TV code"
            android:inputType="textCapCharacters"
            android:padding="13dp"
            android:singleLine="true"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp" />

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <!-- Save Button -->
            <FrameLayout
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:background="@drawable/button_background"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingStart="34dp"
                android:paddingTop="13dp"
                android:paddingEnd="34dp"
                android:paddingBottom="13dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Pair Device Button -->
            <FrameLayout
                android:id="@+id/pair_device_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingStart="34dp"
                android:paddingTop="13dp"
                android:paddingEnd="34dp"
                android:paddingBottom="13dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pair with PIN"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="34dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="34dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:text="Auto-Load Channel"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:text="Long-press on any channel in the home screen to set it as auto-load on app startup"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/autoload_channel_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:text="No channel set"
                android:textColor="@color/text_hint"
                android:textSize="14sp" />

            <!-- Clear Auto-load Button -->
            <FrameLayout
                android:id="@+id/clear_autoload_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingStart="34dp"
                android:paddingTop="13dp"
                android:paddingEnd="34dp"
                android:paddingBottom="13dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear Auto-load"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Current Server Info -->

    <!-- QR Code Card -->

    <!-- Auto-load Channel Card -->

</LinearLayout>
