<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="120dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:transitionName="channel_card_transition">

    <!-- Netflix-Style Card Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/card_elevation"
        android:stateListAnimator="@null"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/overlay_card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/card_background_gradient">

            <!-- Icon Container - Tighter Netflix Style -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="11"
                android:padding="@dimen/padding_xs">

                <!-- Channel Icon/Logo -->
                <ImageView
                    android:id="@+id/channel_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/padding_xxs" />

            </FrameLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/margin_xs"
                android:layout_marginEnd="@dimen/margin_xs"
                android:background="#10FFFFFF" />

            <!-- Channel Name - Compact -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_xs"
                android:paddingEnd="@dimen/padding_xs"
                android:paddingTop="@dimen/padding_xxs"
                android:paddingBottom="@dimen/padding_xxs"
                android:gravity="center">

                <TextView
                    android:id="@+id/channel_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Channel Name"
                    android:textColor="@color/text_primary"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:letterSpacing="0.01"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="2" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Netflix-Style Focus Border with Red Glow -->
    <View
        android:id="@+id/focus_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/focus_border_glow"
        android:alpha="0" />

    <!-- Favorite Star Icon - Top Right Corner -->
    <ImageView
        android:id="@+id/favorite_star"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="@dimen/margin_xs"
        android:layout_marginEnd="@dimen/margin_xs"
        android:src="@drawable/ic_star_outline_small"
        android:visibility="visible"
        android:alpha="0.6"
        android:elevation="8dp"/>

</FrameLayout>
