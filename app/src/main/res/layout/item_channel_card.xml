<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="210dp"
    android:layout_height="130dp"
    android:layout_margin="6dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Golden Ratio Card Container (φ = 1.618) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="6dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/overlay_card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/card_background_gradient">

            <!-- Icon Container - Golden Ratio height (φ-1)/φ ≈ 78.6% -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="11"
                android:padding="9dp">

                <!-- Channel Icon/Logo - Golden proportions -->
                <ImageView
                    android:id="@+id/channel_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:padding="4dp" />

            </FrameLayout>

            <!-- Fibonacci Divider (1px golden division) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:background="#18FFFFFF"
                android:alpha="0.38" />

            <!-- Channel Name - Golden complement (1/φ ≈ 21.4%) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:paddingStart="9dp"
                android:paddingEnd="9dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/channel_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Channel Name"
                    android:textColor="@color/text_primary"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:letterSpacing="0.015"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="2" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Golden Ratio Focus Border -->
    <View
        android:id="@+id/focus_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/focus_border_golden"
        android:alpha="0" />

    <!-- Favorite Star Icon - Top Right Corner (Fibonacci padding) -->
    <ImageView
        android:id="@+id/favorite_star"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="9dp"
        android:src="@drawable/ic_star_outline_small"
        android:visibility="visible"
        android:alpha="0.5"
        android:elevation="9dp"/>

</FrameLayout>
